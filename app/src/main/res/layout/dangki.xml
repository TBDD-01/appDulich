<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKi">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="5dp"
        android:text="ĐĂNG KÍ"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Họ tên"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/txtHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:text="Tên đăng nhập"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/txtusernamedk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:hint="Nhập số điện thoại ở đây"
        android:inputType="phone" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="229dp"
        android:text="Mật khẩu"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/txtpassdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtHoTen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnCtydk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="70dp"
        android:text="CÔNG TY" />

    <Button
        android:id="@+id/btnhdvdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignBottom="@+id/btnCtydk"
        android:layout_marginEnd="-45dp"
        android:layout_marginBottom="3dp"
        android:text="HƯỚNG DẪN VIÊN" />

    <Button
        android:id="@+id/btnKhachdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnhdvdk"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:text="KHÁCH" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnhdvdk"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp" />

</RelativeLayout>